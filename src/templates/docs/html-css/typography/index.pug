extends ../../../_layout/layout

block variables
	- var title = 'Typography'
	- var description = 'Các thuộc tính định dạng cho text thường được sử dụng định dạng trực tiếp cho các thẻ thuộc nhóm inline, (những thuộc tính này cũng có thể định dạng được cho các thẻ khác).'
	- var bodyclass = 'typography'
	- var selected = 'Typography';
	- var href = '/docs/html-css/typography';

block css
	//- Nếu ACTIVE_CONCAT = false thì phải cấu hình bên dưới
	+getMin(bodyclass)
block og
	include _seo


block body
	section.demo-typography
		.container-fluid

			.row
				.col.p-4
					h1.mt-5#sec1 Typography
					hr

					.row
						.col-md-6
							figure
								img.img-thumbnail(src="/images/learn/typography/typography.jpg", alt="")
						.col-md-6
							p.lead Các thuộc tính định dạng cho text thường được sử dụng định dạng trực tiếp cho các thẻ thuộc nhóm inline, (những thuộc tính này cũng có thể định dạng được cho các thẻ khác).

							p.lead Dưới đây là một ví dụ về 1 thuộc tính định dạng văn bản:
							.row
								.col-md-6
									figure
										img.img-thumbnail.p-3(src="/images/learn/typography/word-wrap.png", alt="")
								.col-md-6
									pre.quine.prettyprint.text-left.lang-css.scrollbar-dynamic.wrapper.bg-white.
										p {
											*word-wrap: break-word;
										}
			.row
				.col
					p.mt-5.text-lg.text-primary.text-bold Bảng giá trị

					.table-responsive
						table.table.table-bordered.thead-inverse.table-striped
							thead
								tr
									th Thuộc tính
									th Giá trị
									th(width="25%") CODE
									th(width="25%") Hiển thị
							tbody
								tr
									td.no-wrap -
									td -
									td(width="25%")
										pre.quine.prettyprint.text-left.lang-css.scrollbar-dynamic.wrapper.bg-white.
											p {
											}
									td(width="25%")
										p Này em hỡi con đường em đi đó, con đường em theo đó Chắc qua bao lênh đênh. Bao gập ghềnh có làm heo hắt Có dập tắt mất nét tươi nhuộm nụ cười
