extends ../../../_layout/layout

block variables
	- var title = 'Design'
	- var description = 'Có những lúc bạn muốn thay đổi màu sắc cho hình ảnh. Ví dụ, bạn có thể muốn thay đổi cường độ màu sắc hoặc thậm chí thay đổi màu sắc để tạo ra một hiệu ứng nghệ thuật.'
	- var bodyclass = 'ps'
	- var selected = 'Design';
	- var href = '/docs/design/ps/color';

block css
	//- Nếu ACTIVE_CONCAT = false thì phải cấu hình bên dưới
	+getMin(bodyclass)
block og
	include _seo

block body
	section.mt-5.demo-ps
		.container-fluid
			.row
				.col
					h2 Color
					hr
			.row
				.col-md-6
					a(href="/images/design/ps/Adjustment-Layers-1.png", target="_blank")
						figure
							img.img-thumbnail(src="/images/design/ps/Adjustment-Layers-1.png", alt="")
				.col-md-6
					p.lead Có những lúc bạn muốn thay đổi màu sắc cho hình ảnh. Ví dụ, bạn có thể muốn thay đổi cường độ màu sắc hoặc thậm chí thay đổi màu sắc để tạo ra một hiệu ứng nghệ thuật. Adjustment Layers trong photoshop chính là sự lựa chọn, nó là nhóm công cụ phối màu theo ý thích mà không phá hủy ảnh gốc bạn có thể chỉnh sửa và khôi phục lại hình ảnh ban đầu của bạn bất cứ lúc nào.. Trong hướng dẫn này tôi sẽ liệt kê ra danh sách bộ công cụ có trong Adjustment Layers và hướng dẫn mẫu một ví dụ về tuỳ chỉnh màu ảnh bằng cách sử dụng của Adjustment Layers

			h4.mt-5.text-danger Ảnh mẫu
			.row
				.col-md-6

					a(href="/images/design/ps/anhcuoi.jpg", target="_blank")
						figure
							img.img-thumbnail(src="/images/design/ps/anhcuoi.jpg", alt="")
			.row
				.col

					a(href="/images/design/ps/anhcuoi-2.png", target="_blank")
						figure
							img.img-thumbnail(src="/images/design/ps/anhcuoi-2.png", alt="")
					p Để sử dụng bộ công cụ Adjustment bạn có thể vào Windows chọn Adjustment bạn sẽ thấy một cửa sổ nhỏ với nhiều icon hình dạng khác nhau đó chính là bộ công cụ Adjustment mà ta cần sử dụng. Chỉ cần nhấp vào một icon bất kỳ để tạo một lớp Adjustment cho đối tượng.

					a(href="/images/design/ps/anhcuoi-3.png", target="_blank")
						figure
							img.img-thumbnail(src="/images/design/ps/anhcuoi-3.png", alt="")
					p Hoặc bằng một cách khác và đây cũng là cách thông dụng nhất là tại cửa sổ Layer bạn click chuột chọn 1 layer cần gán Adjustment sau đó nhấp vào icon 'Add an Adjustment' nhỏ bên dưới cửa sổ Layer. Một bảng thuộc tính hiện ra đầy đủ các công cụ có trong bộ Adjustment được hiển thị bằng chữ thay vì icon. Nhấp vào một thuộc tính bất kỳ để tạo một lớp Adjustment cho đối tượng.

					a(href="/images/design/ps/anhcuoi-4.png", target="_blank")
						figure
							img.img-thumbnail(src="/images/design/ps/anhcuoi-4.png", alt="")
					p Trên là một cí dụ tôi add một Hue/Saturation Adjustment và chọn thông số như hình, ta nhận thấy màu của ảnh đã bị thay đổi rất nhiều.

					a(href="/images/design/ps/anhcuoi-5.png", target="_blank")
						figure
							img.img-thumbnail(src="/images/design/ps/anhcuoi-5.png", alt="")
					p Tương tự cho một Vibrance Adjustment

					a(href="/images/design/ps/anhcuoi-6.png", target="_blank")
						figure
							img.img-thumbnail(src="/images/design/ps/anhcuoi-6.png", alt="")
					p Thêm một ví dụ về Tint màu trong Black and White Adjustment
			.row
				.col-md-6

					a(href="/images/design/ps/anhcuoi.jpg", target="_blank")
						figure
							img.img-thumbnail(src="/images/design/ps/anhcuoi.jpg", alt="")
				.col-md-6

					a(href="/images/design/ps/anhcuoi-7.png", target="_blank")
						figure
							img.img-thumbnail(src="/images/design/ps/anhcuoi-7.png", alt="")
				.col
					p Như vậy với bộ công cụ Adjustment ta dễ dàng thay đổi các hiệu ứng màu sắc cho ảnh mà không làm hỏng ảnh gốc cũng như làm cho bức ảnh bớt nhạt nhoà hay thể hiện góc nhìn khadc lạ về ảnh.
