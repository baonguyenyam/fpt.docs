extends ../../../_layout/layout

block variables
	- var title = 'Design'
	- var description = 'Bạn có thể sử dụng Photoshop để chỉnh sửa hầu như bất kỳ hình ảnh nào, chẳng hạn như sửa một ảnh chụp thiếu sáng ảnh, xoá bỏ một vật thể ra khỏi ảnh và nhiều hơn nữa. Trong bài học này, chúng tôi sẽ giới thiệu cho bạn về giao diện Photoshop, bao gồm cách mở các tập tin, làm việc với bảng điều khiển, tuỳ chỉnh không gian làm việc và thay đổi kích thước hiển thị.'
	- var bodyclass = 'ps'
	- var selected = 'Design';
	- var href = '/docs/design/ps/index';

block css
	//- Nếu ACTIVE_CONCAT = false thì phải cấu hình bên dưới
	+getMin(bodyclass)
block og
	include _seo

block body
	section.mt-5.demo-ps
		.container-fluid
			.row
				.col
					h2 Photoshop
					hr
					p.lead Bạn có thể sử dụng Photoshop để chỉnh sửa hầu như bất kỳ hình ảnh nào, chẳng hạn như sửa một ảnh chụp thiếu sáng, xoá bỏ một vật thể ra khỏi ảnh và nhiều hơn nữa. Trong bài học này, chúng tôi sẽ giới thiệu cho bạn về giao diện Photoshop, bao gồm cách mở các tập tin, làm việc với bảng điều khiển, tuỳ chỉnh không gian làm việc và thay đổi kích thước hiển thị.
					.row
						.col-md-4
							p
								a(href="/images/design/ps/ddobe-photoshop-cc-2017-v18.0.png", target="_blank")
									figure
										img.img-thumbnail(src="/images/design/ps/ddobe-photoshop-cc-2017-v18.0.png", alt="")
						.col-md-8
							p.lead Yêu cầu hệ thống
								ul.lead
									li Intel® Pentium® 4 or AMD Athlon® 64 processor (2GHz or faster)
									li Microsoft® Windows® 7 with Service Pack 2 or Windows 8 with Service Pack 1
									li 1GB of RAM
									li 3.2GB of available hard-disk space for installation
									li 1024×768 display (1280×800 recommended) with 16-bit color and 512MB of VRAM (1GB VRAM required for 3D features)
					hr
					p.lead Photoshop là một ứng dụng phức tạp, và bạn có thể cảm thấy rối ren khi sử dụng lần đầu. Vì lý do này, chúng tôi khuyên bạn nên làm theo với bài học bằng cách tải xuống tập ví dụ của chúng tôi (nhấp chuột phải vào liên kết để lưu).
			.row
				.col-md-8
					a(href="/images/design/ps/01.png", target="_blank")
						figure
							img.img-thumbnail(src="/images/design/ps/01.png", alt="")
				.col
					h4 Chú ý
					p.lead Chúng tôi sẽ sử dụng Photoshop CC trong suốt hướng dẫn này để cho bạn thấy các tính năng của Photoshop. Nếu bạn đang sử dụng một phiên bản Photoshop cũ hơn như Photoshop CS5 chẳng hạn thì một số tính năng có thể hoạt động hơi khác một chút nhưng bạn vẫn có thể làm theo. Tuy nhiên, nếu bạn đang sử dụng Photoshop Elements thì hầu như không thể áp dụng theo bài học này.
					h4 Tập tin mẫu
					hr
					p
						a.btn.btn-success(href="/images/design/ps/squirrel.jpg", target="_blank") Tải về
					p
						a.btn.btn-primary(href="/docs/design/ps/layout.html") Next
