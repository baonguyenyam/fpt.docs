extends ../../_layout/layout

block variables
	- var title = 'Box Model'
	- var description = 'Description for home page'
	- var bodyclass = 'box-model'
	- var selected = 'Box Model';
	- var href = '/docs/boxmodel/box';
block css
	//- Nếu ACTIVE_CONCAT = false thì phải cấu hình bên dưới
	+getMin(bodyclass)


block body
	section.mt-5.demo-box
		.container-fluid
			.row
				.col
					h2 Padding
					hr
					p
						figure
							img.img-thumbnail(src="/images/learn/boxmodel/padding.png", alt="alt")
					.row
						.col-md-4
							h5 Default
							.box Box 1
						.col-md-4
							h5 Padding all
							.box.p-3.bg-primary.text-white Box 2
							pre.mt-3.quine.prettyprint.text-left.lang-css.scrollbar-dynamic.wrapper.bg-white.
								.box {
									*padding: 1rem;
								}
						.col-md-4
							h5 Padding custom
							.box.pt-1.pl-2.pr-3.pb-4.bg-primary.text-white Box 3
							pre.mt-3.quine.prettyprint.text-left.lang-css.scrollbar-dynamic.wrapper.bg-white.
								.box {
									*padding: .25rem 1rem 1.5rem .5rem;
								}
			.row.mt-5
				.col
					h2 Margin
					hr
					p
						figure
							img.img-thumbnail(src="/images/learn/boxmodel/margin.png", alt="alt")
					.row
						.col-md-4
							h5 Default
							.box Box 1
						.col-md-4
							h5 Margin all
							.box.m-5.bg-primary.text-white Box 2
							pre.mt-3.quine.prettyprint.text-left.lang-css.scrollbar-dynamic.wrapper.bg-white.
								.box {
									*margin: 3rem 3rem;
								}
						.col-md-4
							h5 Margin custom
							.box.mt-5.mr-3.mb-4.bg-primary.text-white Box 3
							pre.mt-3.quine.prettyprint.text-left.lang-css.scrollbar-dynamic.wrapper.bg-white.
								.box {
									*margin: 3rem 1rem 1.5rem;
								}
			.row.mt-5
				.col
					h2 Border
					hr
					p
						figure
							img.img-thumbnail(src="/images/learn/boxmodel/border.png", alt="alt")
					.row
						.col-md-4
							h5 Border all: 1px solid
							.box.border Box 1
							pre.mt-3.quine.prettyprint.text-left.lang-css.scrollbar-dynamic.wrapper.bg-white.
								.box {
									*border-width: 1px;
									*border-color: #ff0000;
									*border-style: solid;
								}
						.col-md-4
							h5 Border custom
							.box.border-2 Box 2
							pre.mt-3.quine.prettyprint.text-left.lang-css.scrollbar-dynamic.wrapper.bg-white.
								.box {
									*border-top: 1px solid #ff0000;
									*border-right: 3px solid #0000ff;
								}
						.col-md-4
							h5 Border custom
							.box.border-3 Box 3
							pre.mt-3.quine.prettyprint.text-left.lang-css.scrollbar-dynamic.wrapper.bg-white.
								.box {
									*border: 1px dotted #ff0000;
									*border-right: 3px dashed #0000ff;
									*border-bottom: 4px double #0000ff;
									*border-left-width: 8px;
								}
			.row.mt-5
				.col
					h2 Border-radius
					hr
					p
						figure
							img.img-thumbnail(src="/images/learn/boxmodel/border-radius.png", alt="alt")
					.row
						.col-md-4
							h5 Border-radius all: 10px
							.box.border-r Box 1
							pre.mt-3.quine.prettyprint.text-left.lang-css.scrollbar-dynamic.wrapper.bg-white.
								.box {
									*border: 1px solid #ff0000;
									*border-radius: 10px;
								}
						.col-md-4
							h5 Border-radius custom
							.box.border-r-2 Box 2
							pre.mt-3.quine.prettyprint.text-left.lang-css.scrollbar-dynamic.wrapper.bg-white.
								.box {
									*border: 1px solid #ff0000;
									*border-top-left-radius: 10px;
									*border-top-right-radius: 0;
									*border-bottom-right-radius: 30px;
									*border-bottom-left-radius: 5px;
								}
						.col-md-4
							h5 Border-radius custom
							.box.border-r-3 Box 3
							pre.mt-3.quine.prettyprint.text-left.lang-css.scrollbar-dynamic.wrapper.bg-white.
								.box {
									*border: 1px solid #ff0000;
									*border-radius: 50%;
									*width: 100px;
									*height: 100px;
								}
						.col-md-4
							h5 Border-radius custom
							.box.border-r-4 Box 4
							pre.mt-3.quine.prettyprint.text-left.lang-css.scrollbar-dynamic.wrapper.bg-white.
								.box {
									*border: 1px solid #ff0000;
									*border-radius: 25px;
									*width: 100%;
									*height: 50px;
								}
			.row.mt-5
				.col
					h2 Box Shadow
					hr
					p
						figure
							img.img-thumbnail(src="/images/learn/boxmodel/shadow.png", alt="alt")
					.row
						.col-md-4
							h5 Box Shadow:
							.box.box-shadow Box 1
							pre.mt-5.quine.prettyprint.text-left.lang-css.scrollbar-dynamic.wrapper.bg-white.
								.box {
									*box-shadow: 3px 7px 0px 0px #ff0000;
								}
						.col-md-4
							h5 Box Shadow custom
							.box.box-shadow-2 Box 2
							pre.mt-5.quine.prettyprint.text-left.lang-css.scrollbar-dynamic.wrapper.bg-white.
								.box {
									*box-shadow: 0px 0px 30px 0px #ff0000;
								}
						.col-md-4
							h5 Box Shadow custom
							.box.box-shadow-3 Box 3
							pre.mt-5.quine.prettyprint.text-left.lang-css.scrollbar-dynamic.wrapper.bg-white.
								.box {
									*box-shadow: 0px 0px 30px 10px #ff0000;
								}



			.row.mt-5
				.col
					.m-4.text-center.btn-toolbar.justify-content-center
						.btn-group
							a.btn.btn-xs.btn-primary(href="/docs/boxmodel/index.html", title="title") Home
							a.btn.btn-xs.btn-primary(href="/docs/boxmodel/background.html", title="title") Next
